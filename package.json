{
  "name": "supershad",
  "version": "0.0.7",
  "description": "Create beautiful layered CC shadows automatically.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "tsup; jest --config jest.config.js",
    "build": "tsup",
    "dev": "tsup --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "prepack": "yarn build",
    "prepublish": "yarn format && yarn test && yarn lint",
    "publish": "yarn npm publish --access public",
    "bump": "yarn lint && yarn version -i patch && git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/jaukia/supershad.git"
  },
  "keywords": [
    "shadows",
    "css"
  ],
  "author": "Janne Aukia",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jaukia/supershad/issues"
  },
  "homepage": "https://github.com/jaukia/supershad#readme",
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsdoc": "^39.6.4",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.3",
    "tsup": "^6.4.0",
    "typescript": "^4.7.2"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "eaze": "^0.1.2"
  },
  "packageManager": "yarn@3.3.0"
}
